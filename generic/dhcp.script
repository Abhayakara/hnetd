#!/bin/sh
echo "[dhcp.script] $*"
[ -z "$1" ] && echo "Error: should be run by udhcpc" && exit 1

set_classless_routes() {
	local max=128
	shift 1

	while [ -n "$1" -a -n "$2" -a $max -gt 0 ]; do
		ip -4 route add "$1" via "$2" dev "$interface"
		max=$(($max-1))
		shift 2
	done
}

update_resolv() {
	local dns="$1"

	(
		flock -n 9
                FILE=`tempfile`
                if [ ! -d /run/resolvconf ]
                then
		    grep -v "#udhcpc:$interface:" /etc/resolv.conf > $FILE
                fi
		for c in $dns; do
			echo "nameserver $c #udhcpc:$interface:" >> $FILE
		done
                if [ -d /run/resolvconf ]
                then
                    resolvconf -a ${interface}.dhcp < $FILE
                else
                    chmod a+r $FILE
		    mv $FILE /etc/resolv.conf
                fi
	) 9>/tmp/resolv.conf.lock
	rm -f /tmp/resolv.conf.lock $FILE
}


setup_interface () {
	hnet-call "{\"command\": \"ifup\", \"ifname\": \"$interface\"}"

	ip -4 route flush dev "$interface"
	ip -4 address flush dev "$interface"

	ifconfig "$interface" "$ip" netmask "${subnet:-255.255.255.0}"

	[ -n "$METRIC" ] && METRIC="metric $METRIC"
	if [ "$NODEFAULT" != 1 ]; then
		for i in $router; do
			ip -4 route add default via "$i" dev "$interface" $METRIC
		done
	fi

	# CIDR STATIC ROUTES (rfc3442)
	[ -n "$staticroutes" ] && set_classless_routes $staticroutes
	[ -n "$msstaticroutes" ] && set_classless_routes $msstaticroutes

	update_resolv "$dns"
	local dnspart=""

	for entry in $dns; do
		if [ -z "$dnspart" ]; then
			dnspart="\"$entry\""
		else
			dnspart="$dnspart, \"$entry\""
		fi
	done

	hnet-call "{\"command\": \"enable_ipv4_uplink\", \"ifname\": \"$interface\", \"dns\": [$dnspart], \"ipv4source\": \"$ip\"}"
}

deconfig_interface() {
	ip -4 route flush dev "$interface"
	ip -4 address flush dev "$interface"
	hnet-call "{\"command\": \"disable_ipv4_uplink\", \"ifname\": \"$interface\"}"
	update_resolv "$interface" ""
}

case "$1" in
	deconfig)
		deconfig_interface
	;;
	renew|bound)
		setup_interface
	;;
esac

# user rules
[ -f /etc/udhcpc.user ] && . /etc/udhcpc.user

exit 0
